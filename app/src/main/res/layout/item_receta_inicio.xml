<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtUserInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="@string/txtNomUsuario_RecetaInicio"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/imgperfilInicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintStart_toEndOf="@id/imgperfilInicio"
            app:layout_constraintTop_toTopOf="@id/imgperfilInicio"
            app:layout_constraintVertical_bias="0.297" />

        <TextView
            android:id="@+id/txtTituloRecetaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="@string/txtNomReceta_RecetaInicio"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/txtUserInicio"
            app:layout_constraintTop_toBottomOf="@id/txtUserInicio" />

        <FrameLayout
            android:id="@+id/frameImgRecetaInicio"
            android:layout_width="374dp"
            android:layout_height="317dp"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloRecetaInicio">

            <ImageView
                android:id="@+id/imgRecetaInicio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />

        </FrameLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgperfilInicio"
            android:layout_width="110dp"
            android:layout_height="111dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toTopOf="@+id/frameImgRecetaInicio"
            app:layout_constraintEnd_toStartOf="@+id/txtUserInicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.imageview.ShapeableImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>